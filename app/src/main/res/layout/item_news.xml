<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    android:clickable="true"
    android:layout_margin="5dp"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/news_image"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/icon_youtube"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <TextView
        android:id="@+id/news_title"
        android:layout_marginTop="5dp"
        android:maxLines="2"
        android:text="Title"
        android:textColor="#000"
        android:textSize="17sp"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:paddingEnd="10dp"

        android:lineSpacingExtra="5dp"
        android:layout_toRightOf="@+id/news_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/news_image"
        android:paddingRight="10dp"/>
    <TextView
        android:id="@+id/news_descp"
        android:layout_marginTop="5dp"
        android:maxLines="2"
        android:text="Descp"
        android:textSize="16sp"
        android:paddingEnd="10dp"
        android:paddingLeft="10dp"
        android:lineSpacingExtra="5dp"
        android:layout_toRightOf="@+id/news_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/news_title"
        android:layout_toEndOf="@+id/news_image"
        android:paddingRight="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/news_descp"
        android:layout_toRightOf="@id/news_image"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/news_date"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:text="Yesterday" />

        <TextView
            android:id="@+id/news_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/news_date"
            android:layout_toRightOf="@id/news_date"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="5dp"
            android:text="News App" />

        <TextView
            android:id="@+id/news_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/news_source"
            android:layout_toRightOf="@id/news_source"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="5dp"
            android:text="0 views" />
    </RelativeLayout>
</RelativeLayout>

</androidx.cardview.widget.CardView>